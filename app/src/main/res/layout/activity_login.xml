<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8e4ff"
    tools:context=".login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/uid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:padding="10dp"
        android:text="Your user ID"
        android:textColor="#043362"
        android:textSize="25dp"
        app:fontFamily="casual"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/userID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="250dp"
        android:layout_toRightOf="@+id/uid"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/pwd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uid"
        android:padding="10dp"
        android:text="Your password"
        android:textColor="#043362"
        android:textSize="25dp"
        app:fontFamily="casual"
        android:textStyle="bold"
        android:cursorVisible="true"/>

    <EditText
        android:id="@+id/uPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userID"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/pwd"
        android:background="#FFFFFF"
        android:inputType="textWebPassword"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="casual"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/li"
        android:layout_below="@+id/pwd"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:text="LOGIN"
        android:fontFamily="casual"
        android:background="#003d7a"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="New User? Signup?"
        android:padding="5dp"
        android:textSize="15dp"
        android:textColor="#006edc"
        android:id="@+id/linkSU"
        android:layout_below="@+id/li"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>